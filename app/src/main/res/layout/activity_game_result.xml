<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GameResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/frame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="TỔNG ĐIỂM"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/txtMarkResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="100"
                android:textSize="50dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="100dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="100dp">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/again"
                android:onClick="clickToPlayAgain"/>

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="230dp"
                android:background="@drawable/btnexit"
                android:onClick="clickToExit"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>