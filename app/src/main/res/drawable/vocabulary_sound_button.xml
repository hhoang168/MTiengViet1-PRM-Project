<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#9BCEE6" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </selector>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <solid android:color="#8DA09E9C" />
                    <corners android:radius="30dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="20dp"
                        android:right="20dp"
                        android:top="10dp" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <shape>
            <solid android:color="#8DA09E9C" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>